<?xml version="1.0" encoding="utf-8" ?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false">
    <layer-list>
      <item>
        <shape>
          <corners android:radius="10dp" />
          <solid android:color="#ee1010"/>
        </shape>
      </item>

      <item>
        <shape>
          <gradient android:angle="270" android:startColor="#f20404" android:endColor="#f24747"/>
          <corners android:radius="10dp" />
          <padding android:bottom="10dp" android:top="10dp" android:left="10dp" android:right="10dp" />
        </shape>
      </item>
    </layer-list>
  </item>

  <item android:state_pressed="true">
    <layer-list>
      <item>
        <shape>
          <corners android:radius="10dp" />
          <solid android:color="#f02e2e"/>
        </shape>
      </item>

      <item>
        <shape>
          <gradient android:angle="270" android:startColor="#f24747" android:endColor="#f06969"/>
          <corners android:radius="10dp" />
          <padding android:bottom="10dp" android:top="10dp" android:left="10dp" android:right="10dp" />
        </shape>
      </item>
    </layer-list>
  </item>

</selector>